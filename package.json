{
  "private": true,
  "name": "zig-butter",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "type": "module",
  "source": "game.html",
  "scripts": {
    "build:wasm": "zig build-lib src/main.zig -target wasm32-freestanding -dynamic -O ReleaseSmall --export=init --export=turn --export=getViewPointer --export=getMapPointer --export=viewWidth --export=viewHeight --export=mapWidth --export=mapHeight",
    "build:js": "esbuild ./js --bundle --jsx=preserve --outfile=dist/game.js",
    "build": "npm run build:wasm && npm run build:js",
    "wasm:opt": "wasm-opt -Oz --converge -o butter.wasm main.wasm && mv butter.wasm main.wasm",
    "start": "npx serve ."
  },
  "dependencies": {
    "nanobus": "4.5.0",
    "preact": "10.13.2",
    "throttle-debounce": "5.0.0"
  },
  "devDependencies": {
    "esbuild": "0.17.17",
    "prettier": "2.8.7"
  },
  "engines": {
    "node": ">= 16"
  },
  "browserslist": [
    "last 1 version"
  ]
}
